{
  "name": "@forge/desktop",
  "version": "0.1.0",
  "description": "Forge Desktop - AI-First Knowledge Management",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main/main.js",
    "dev:renderer": "vite",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json && vite build",
    "build": "npm run build:main && npm run build:renderer",
    "dist": "electron-builder",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@milkdown/core": "^7.15.5",
    "@milkdown/ctx": "^7.15.5",
    "@milkdown/plugin-block": "^7.15.5",
    "@milkdown/plugin-cursor": "^7.15.5",
    "@milkdown/plugin-history": "^7.15.5",
    "@milkdown/plugin-listener": "^7.15.5",
    "@milkdown/prose": "^7.15.5",
    "@milkdown/theme-nord": "^7.15.5",
    "@monaco-editor/react": "^4.6.0",
    "@tailwindcss/typography": "^0.5.16",
    "@uiw/react-md-editor": "^4.0.8",
    "gray-matter": "^4.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-wiki-link": "^2.0.1",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0"
  },
  "build": {
    "appId": "com.forge.desktop",
    "productName": "Forge Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
